@model Shop.Net.Web.Areas.BackOffice.Models.CategoryEditModel

@{
    ViewBag.Title = "Add Category";
}

<h2>@ViewBag.Title</h2>
    @using (Html.BeginForm("Add", "Categories", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <hr />
           @Html.EditorFor(model => model)
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-success" />
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-info" })
                </div>
            </div>
        </div>
    }

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
}