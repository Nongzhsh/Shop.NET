@model ICollection<Shop.Net.Web.ViewModels.Product.ProductThumbnailModel>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Shop.Net</h1>
    <p class="lead">Welcome to our shop!</p>
</div>

<div class="row">
    @for (var i = 0; i < Model.Count(); i++)
    {
        var product = Model.ElementAt(i);
        <div class="col-sm-4">
            <h2>@product.Name</h2>
            <img src="@product.Image.Url" class="img-responsive" alt="@product.Image.AltText" />
            <p class="text-center">
                <a class="btn btn-default" href="@Url.Action("Product", "Laptop", new {product.Id})">Price @product.Price</a>
            </p>
        </div>

        if (i > 0 && i % 2 == 0)
        {
            @:</div>
             @:<div class="row">
        }
    }
</div>