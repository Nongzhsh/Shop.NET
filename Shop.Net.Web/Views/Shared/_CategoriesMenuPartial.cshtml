@model IEnumerable<Shop.Net.Web.Areas.Catalog.Models.Category.CategoryViewModel>

<ul class="nav navbar-nav">
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">Categories <b class="caret"></b></a>
        <ul class="dropdown-menu">
            @foreach (var category in Model)
            {
                <li>@Html.RouteLink(category.Name, "Catalog_Categories", new { categoryFriendlyUrl = category.FriendlyUrl})</li>
            }
        </ul>
    </li>
</ul>
